<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field d-flex flex-col">
    <%= f.label :name, class: "v-hidden" %>
    <%= f.text_field :name, autocomplete: "name", autofocus: true, class: "", placeholder: "Name" %>
  </div>

  <div class="field d-flex flex-col">
    <%= f.label :email, class: 'v-hidden' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "", placeholder: "Email" %>
  </div>

  <div class="field d-flex flex-col">
    <%= f.label :password, class: "v-hidden" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "", placeholder: "Password (6 characters min)" %>
  </div>

  <div class="field d-flex flex-col">
    <%= f.label :password_confirmation, class: "v-hidden" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "", placeholder: "Password confirmation" %>
    <%= f.label :password_confirmation, class: "v-hidden" %>
  </div>

  <div class="field d-flex flex-col">
    <label>
      <%= f.radio_button :role, "user", checked: true %> User
    </label>
    <label>
      <%= f.radio_button :role, "admin" %> Admin
    </label>
    <%= f.label :role, class: "v-hidden" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
